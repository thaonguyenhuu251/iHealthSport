<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@drawable/bg_white_four_corner_normal"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/_10sdp"
    android:id="@+id/content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            style="@style/text_wrap_header"
            android:text="@string/home_header_oxy_in_blood"
            app:drawableStartCompat="@drawable/ic_home_blood" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                style="@style/text_normal"
                android:paddingVertical="@dimen/_5sdp"
                android:textSize="@dimen/_16ssp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/text_normal"
        android:text="@string/home_measure"
        android:layout_margin="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/bg_white_border_grey" />

</LinearLayout>