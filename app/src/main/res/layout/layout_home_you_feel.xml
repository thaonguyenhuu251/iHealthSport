<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background_grey">

    <TextView
        android:id="@+id/textView3"
        style="@style/text_wrap_header"
        android:text="@string/how_are_you_feeling_today"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rgFelling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <RadioButton
            android:id="@+id/rdGood"
            style="@style/text_wrap_feel"
            android:layout_height="match_parent"
            android:text="@string/feeling_good"
            android:drawableBottom="@drawable/selector_radio"
            android:button="@null"
            app:drawableTopCompat="@drawable/ic_home_feeling_good" />

        <RadioButton
            android:id="@+id/rdDis"
            style="@style/text_wrap_feel"
            android:text="@string/feeling_disappointed"
            android:drawableBottom="@drawable/selector_radio"
            android:button="@null"
            app:drawableTopCompat="@drawable/ic_home_feeling_dis" />

        <RadioButton
            android:id="@+id/rdBad"
            style="@style/text_wrap_feel"
            android:layout_height="match_parent"
            android:text="@string/feeling_bad"
            android:drawableBottom="@drawable/selector_radio"
            android:button="@null"
            app:drawableTopCompat="@drawable/ic_home_feeling_bad" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>