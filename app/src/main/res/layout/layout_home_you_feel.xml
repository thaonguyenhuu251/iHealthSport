<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_background_grey">

    <TextView
        android:id="@+id/textView3"
        style="@style/text_wrap_normal"
        android:text="How are you feeling today?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <TextView
            style="@style/text_wrap_feel"
            android:layout_height="match_parent"
            android:text="Feeling Good"
            app:drawableTopCompat="@drawable/ic_home_feeling_good" />

        <TextView
            style="@style/text_wrap_feel"
            android:text="Feeling Disappointed"
            app:drawableTopCompat="@drawable/ic_home_feeling_dis" />

        <TextView
            style="@style/text_wrap_feel"
            android:layout_height="match_parent"
            android:text="Feeling Bad"
            app:drawableTopCompat="@drawable/ic_home_feeling_bad" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>