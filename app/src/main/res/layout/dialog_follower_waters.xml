<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:background="@drawable/bg_white_four_corner_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/text_heading_large"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/_16ssp"
                android:text="Choose a target number of cups of water you drink per day (350ml/cup)"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_15sdp"
                    app:lottie_autoPlay="true"
                    app:lottie_rawRes="@raw/glass_of_water"
                    app:lottie_loop="true" />

                <NumberPicker
                    android:id="@+id/numberpicker"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <Button
                android:id="@+id/tvConfirm"
                style="@style/button_navigation"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="Confirm"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>
