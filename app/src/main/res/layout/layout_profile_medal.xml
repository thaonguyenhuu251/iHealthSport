<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@drawable/bg_white_four_corner_normal"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <TextView
        style="@style/text_wrap_normal"
        android:text="Medal"
        app:drawableStartCompat="@drawable/ic_profile_sports_medal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="19.294 \n Step"
            app:drawableTopCompat="@drawable/ic_profile_person_walking" />


        <TextView
            style="@style/text_normal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="19.294 \n Step"
            app:drawableTopCompat="@drawable/ic_profile_person_walking" />


        <TextView
            style="@style/text_normal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Time"
            app:drawableTopCompat="@drawable/ic_profile_timer_clock" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="19.294 \n Step"
            app:drawableTopCompat="@drawable/ic_profile_person_walking" />


        <TextView
            style="@style/text_normal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="19.294 \n Step"
            app:drawableTopCompat="@drawable/ic_profile_person_walking" />


        <TextView
            style="@style/text_normal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Time"
            app:drawableTopCompat="@drawable/ic_profile_timer_clock" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            style="@style/text_normal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="19.294 \n Step"
            app:drawableTopCompat="@drawable/ic_profile_person_walking" />


        <TextView
            style="@style/text_normal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="19.294 \n Step"
            app:drawableTopCompat="@drawable/ic_profile_person_walking" />


        <TextView
            style="@style/text_normal"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Time"
            app:drawableTopCompat="@drawable/ic_profile_timer_clock" />

    </LinearLayout>

</LinearLayout>