<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.htnguyen.ihealth.view.home.HomeViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:background="@drawable/bg_white_four_corner_normal"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                style="@style/text_wrap_header"
                android:text="@string/water"
                app:drawableStartCompat="@drawable/ic_home_glass_water" />

            <TextView
                android:id="@+id/textView4"
                style="@style/text_normal"
                android:paddingVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtMinus"
                style="@style/text_normal"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/bg_white_border_grey"
                android:elevation="@dimen/_2sdp"
                android:gravity="center"
                android:src="@drawable/ic_home_exercise_more"
                android:text="-"
                android:textSize="@dimen/_20sdp" />

            <TextView
                android:id="@+id/txtAdd"
                style="@style/text_normal"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/bg_white_border_grey"
                android:elevation="@dimen/_2sdp"
                android:gravity="center"
                android:src="@drawable/ic_home_exercise_more"
                android:text="+"
                android:textSize="@dimen/_20sdp" />
        </LinearLayout>

    </LinearLayout>

</layout>