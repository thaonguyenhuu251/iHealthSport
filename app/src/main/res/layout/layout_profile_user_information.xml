<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@drawable/bg_white_four_corner_normal"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <TextView
        style="@style/text_wrap_normal"
        android:text="Your Information Detail"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_home_food" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/image_profile_information"
            android:layout_weight="1"
            android:textColor="@color/color_black"
            android:drawablePadding="@dimen/_10sdp"
            android:text="Female"
            app:drawableStartCompat="@drawable/ic_profile_friends" />

        <TextView
            style="@style/image_profile_information"
            android:layout_weight="1"
            android:textColor="@color/color_black"
            android:drawablePadding="@dimen/_10sdp"
            android:text="Sep 23, 1999"
            app:drawableStartCompat="@drawable/ic_profile_friends" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal">

        <TextView
            style="@style/image_profile_information"
            android:layout_weight="1"
            android:textColor="@color/color_black"
            android:drawablePadding="@dimen/_10sdp"
            android:text="52 Kg"
            app:drawableStartCompat="@drawable/ic_profile_friends" />

        <TextView
            style="@style/image_profile_information"
            android:layout_weight="1"
            android:textColor="@color/color_black"
            android:drawablePadding="@dimen/_10sdp"
            android:text="170.3 cm"
            app:drawableStartCompat="@drawable/ic_profile_friends" />

    </LinearLayout>

</LinearLayout>