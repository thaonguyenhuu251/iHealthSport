<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:background="@drawable/bg_white_four_corner_normal"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:elevation="@dimen/_1sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_30sdp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/images" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtNameSocial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            style="@style/text_heading_large"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtSocialFirstDate"
                style="@style/text_wrap_normal"
                android:layout_marginVertical="@dimen/_2sdp"
                android:textSize="@dimen/_12ssp"
                app:drawableStartCompat="@drawable/ic_social_first_date" />

            <TextView
                android:id="@+id/txtSocialEndDate"
                style="@style/text_wrap_normal"
                android:layout_marginVertical="@dimen/_2sdp"
                android:textSize="@dimen/_12ssp"
                app:drawableStartCompat="@drawable/ic_social_complete_date" />

            <TextView
                android:id="@+id/txtSocialFollowStep"
                style="@style/text_wrap_normal"
                android:layout_marginVertical="@dimen/_2sdp"
                android:textSize="@dimen/_12ssp"
                app:drawableStartCompat="@drawable/ic_social_follow_step" />

            <TextView
                android:id="@+id/txtSocialYourStep"
                style="@style/text_wrap_normal"
                android:layout_marginVertical="@dimen/_2sdp"
                android:textSize="@dimen/_12ssp"
                app:drawableStartCompat="@drawable/ic_home_step" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressCircleDeterminate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgSocial"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/_5sdp" />

    </LinearLayout>

</LinearLayout>