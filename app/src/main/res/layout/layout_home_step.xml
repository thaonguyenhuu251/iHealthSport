<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@drawable/bg_white_four_corner_normal"
    android:padding="@dimen/_10sdp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            style="@style/text_wrap_normal"
            android:text="Step"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_home_step" />

        <TextView
            android:id="@+id/textView4"
            style="@style/text_normal"
            android:text="638/7000"
            android:paddingVertical="@dimen/_5sdp"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black" />

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_margin="@dimen/_5sdp"
        android:padding="@dimen/_7sdp"
        android:elevation="@dimen/_2sdp"
        android:background="@drawable/bg_white_border_grey"
        android:src="@drawable/ic_home_exercise_more"/>

</LinearLayout>