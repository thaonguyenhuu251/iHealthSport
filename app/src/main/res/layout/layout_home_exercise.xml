<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_5sdp"
    android:background="@drawable/bg_white_four_corner_normal"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            style="@style/text_wrap_normal"
            android:text="Exercise"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_home_exercise" />

        <TextView
            android:gravity="end"
            style="@style/text_wrap_normal"
            android:text="See History"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            style="@style/image_exercise"
            android:src="@drawable/ic_home_exercise_walk"/>

        <ImageView
            style="@style/image_exercise"
            android:src="@drawable/ic_home_exercise_run"/>

        <ImageView
            style="@style/image_exercise"
            android:src="@drawable/ic_home_exercise_swim"/>

        <ImageView
            style="@style/image_exercise"
            android:padding="@dimen/_7sdp"
            android:src="@drawable/ic_home_exercise_more"/>

    </LinearLayout>

</LinearLayout>