<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IHealth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_blue_general</item>
        <item name="colorPrimaryVariant">@color/color_blue_general</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_blue_general</item>
        <item name="colorSecondaryVariant">@color/color_blue_general</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#EFEFEF</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="image_wrap_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="image_exercise">
        <item name="android:layout_width">@dimen/dimen_xxl</item>
        <item name="android:layout_height">@dimen/dimen_xxl</item>
        <item name="android:padding">@dimen/dimen_normal</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:background">@drawable/bg_radius_16_border_grey</item>
    </style>

    <style name="image_profile_information">
        <item name="android:layout_width">@dimen/dimen_xxl</item>
        <item name="android:layout_height">@dimen/dimen_xxl</item>
        <item name="android:padding">@dimen/dimen_normal</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:background">@drawable/bg_white_border_grey_small</item>
    </style>

    <style name="text_wrap_large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/mulish_light</item>
    </style>

    <style name="text_wrap_large_plus">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:fontFamily">@font/mulish_light</item>
    </style>

    <style name="text_wrap_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:fontFamily">@font/mulish_light</item>
    </style>

    <style name="text_wrap_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:fontFamily">@font/mulish_semibold</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <style name="text_wrap_exercise">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/dimen_large</item>
        <item name="android:paddingVertical">@dimen/_5sdp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:background">@drawable/bg_radius_16_border_grey</item>
        <item name="android:fontFamily">@font/mulish_light</item>
    </style>

    <style name="text_wrap_feel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/dimen_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:drawablePadding">@dimen/dimen_normal</item>
        <item name="android:background">@drawable/bg_white_four_corner_normal</item>
        <item name="android:fontFamily">@font/mulish_light</item>
    </style>

    <style name="text_match_setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dimen_small_super</item>
        <item name="android:drawablePadding">@dimen/dimen_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:drawableEnd">@drawable/ic_setting_right</item>
        <item name="android:fontFamily">@font/mulish_light</item>
    </style>

    <style name="text_heading_large">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_26ssp</item>
        <item name="android:fontFamily">@font/mulish_light</item>
    </style>

    <style name="text_heading_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
    </style>

    <style name="text_heading_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
    </style>

    <style name="text_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:fontFamily">@font/mulish_regular</item>
    </style>

    <style name="text_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_blue_general</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/mulish_light</item>
    </style>

    <style name="button_navigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_15sdp</item>
        <item name="android:background">@drawable/bg_radius_8</item>
        <item name="android:backgroundTint">@color/color_blue_general</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:elevation">@dimen/dimen_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/mulish_medium</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/mulish_light</item>
    </style>

    <style name="edt_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:background">@drawable/bg_white_four_corner_normal</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/mulish_light</item>
    </style>

    <style name="DialogWidth" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowMinWidthMajor">40%</item>
        <item name="android:windowMinWidthMinor">40%</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="MyDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="marginHorizontal">@dimen/_10sdp</item>
    </style>

    <style name="ErrorMessageText">
        <item name="android:textColor">@color/color_red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_15sdp</item>
    </style>

    <style name="LWView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>