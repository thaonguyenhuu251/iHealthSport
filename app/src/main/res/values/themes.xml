<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IHealth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_white_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="image_wrap_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="image_exercise">
        <item name="android:layout_width">@dimen/dimen_xxl</item>
        <item name="android:layout_height">@dimen/dimen_xxl</item>
        <item name="android:padding">@dimen/dimen_normal</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:background">@drawable/bg_white_border_grey</item>
    </style>

    <style name="image_profile_information">
        <item name="android:layout_width">@dimen/dimen_xxl</item>
        <item name="android:layout_height">@dimen/dimen_xxl</item>
        <item name="android:padding">@dimen/dimen_normal</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:background">@drawable/bg_white_border_grey_small</item>
    </style>

    <style name="text_wrap_large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="text_wrap_large_plus">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="text_wrap_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="text_wrap_exercise">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">@dimen/dimen_large</item>
        <item name="android:paddingVertical">@dimen/_5sdp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:elevation">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:background">@drawable/bg_white_border_grey</item>
    </style>

    <style name="text_wrap_feel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">@dimen/dimen_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dimen_small_super</item>
        <item name="android:drawablePadding">@dimen/dimen_normal</item>
        <item name="android:background">@drawable/bg_white_four_corner_normal</item>
    </style>

    <style name="text_match_setting">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dimen_small_super</item>
        <item name="android:drawablePadding">@dimen/dimen_normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:drawableEnd">@drawable/ic_setting_right</item>
    </style>

    <style name="text_heading_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="button_navigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:background">@drawable/bg_button_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:outlineAmbientShadowColor" tools:ignore="NewApi">@color/color_blue_general</item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">@color/color_blue_general</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>